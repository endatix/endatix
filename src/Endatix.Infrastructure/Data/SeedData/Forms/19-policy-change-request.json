{
  "form": {
    "name": "Policy Change Request"
  },
  "definition": {
    "jsonSchema": {
        "title": "Policy Change Request",
        "description": "Use this form to request changes to your existing insurance policy.",
        "pages": [
            {
            "name": "policy-contact-info",
            "title": "Policy & Contact Info",
            "elements": [
                {
                "type": "text",
                "name": "policyNumber",
                "title": "Policy Number",
                "isRequired": true
                },
                {
                "type": "dropdown",
                "name": "policyType",
                "title": "Type of Policy",
                "isRequired": true,
                "choices": [
                    "Auto",
                    "Home",
                    "Life",
                    "Health"
                ],
                "showOtherItem": true
                },
                {
                "type": "text",
                "name": "fullName",
                "title": "Full Name",
                "isRequired": true
                },
                {
                "type": "text",
                "name": "email",
                "title": "Email Address",
                "isRequired": true,
                "inputType": "email"
                },
                {
                "type": "phone",
                "name": "phone"
                }
            ]
            },
            {
            "name": "requested-change",
            "title": "Requested Change",
            "elements": [
                {
                "type": "checkbox",
                "name": "changeType",
                "title": "What would you like to change?",
                "isRequired": true,
                "choices": [
                    "Update Contact Info",
                    "Change Coverage Amount",
                    "Change Beneficiary",
                    "Add/Remove Insured Item"
                ],
                "showOtherItem": true
                },
                {
                "type": "comment",
                "name": "changeReason",
                "title": "Please describe the reason for the change request (optional)"
                }
            ]
            },
            {
            "name": "update-contact-info",
            "visibleIf": "{changeType} contains 'Update Contact Info'",
            "title": "Update Contact Info",
            "elements": [
                {
                "type": "text",
                "name": "newAddress",
                "title": "New Address"
                },
                {
                "type": "phone",
                "name": "newPhone"
                },
                {
                "type": "text",
                "name": "newEmail",
                "title": "New Email Address",
                "inputType": "email"
                }
            ]
            },
            {
            "name": "change-coverage",
            "visibleIf": "{changeType} contains 'Change Coverage Amount'",
            "title": "Change Coverage",
            "elements": [
                {
                "type": "text",
                "name": "currentCoverage",
                "title": "Current Coverage Amount (USD)",
                "inputType": "number"
                },
                {
                "type": "text",
                "name": "desiredCoverage",
                "title": "New Coverage Amount (USD)",
                "inputType": "number"
                }
            ]
            },
            {
            "name": "change-beneficiary",
            "visibleIf": "{changeType} contains 'Change Beneficiary'",
            "title": "Change Beneficiary",
            "elements": [
                {
                "type": "text",
                "name": "newBeneficiaryName",
                "title": "New Beneficiary Name"
                },
                {
                "type": "text",
                "name": "relationshipToBeneficiary",
                "title": "Relationship to Beneficiary"
                },
                {
                "type": "text",
                "name": "beneficiaryDOB",
                "title": "Beneficiary Date of Birth",
                "inputType": "date"
                }
            ]
            },
            {
            "name": "add-or-remove-insured-item",
            "visibleIf": "{changeType} contains 'Add/Remove Insured Item'",
            "title": "Add or Remove Insured Item",
            "elements": [
                {
                "type": "radiogroup",
                "name": "itemChangeType",
                "title": "Would you like to add or remove an item?",
                "choices": [
                    "Add",
                    "Remove"
                ]
                },
                {
                "type": "text",
                "name": "itemDescription",
                "title": "Description of Item"
                },
                {
                "type": "text",
                "name": "itemValue",
                "title": "Value of Item (USD)",
                "inputType": "number"
                }
            ]
            },
            {
            "name": "supporting-documents",
            "title": "Supporting Documents",
            "elements": [
                {
                "type": "file",
                "name": "supportingFiles",
                "title": "Upload any supporting documents (e.g. proof of address, item appraisal)",
                "allowMultiple": true,
                "waitForUpload": true,
                "maxSize": 10485760
                },
                {
                "type": "comment",
                "name": "additionalNotes",
                "title": "Any additional notes or instructions?"
                }
            ]
            },
            {
            "name": "confirmation",
            "title": "Confirmation",
            "elements": [
                {
                "type": "html",
                "name": "confirmationText",
                "html": "<h3>Request Submitted</h3><p>Your policy change request has been received. Our team will process it and follow up with you shortly.</p>"
                }
            ]
            }
        ],
        "showProgressBar": true
        }
  },
