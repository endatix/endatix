{
  "form": {
    "name": "Account Opening"
  },
  "definition": {
    "jsonSchema": {
        "title": "Account Opening Form",
        "description": "Please complete the form below to open your new account.",
        "pages": [
            {
            "name": "personal-details",
            "title": "Personal Details",
            "elements": [
                {
                "type": "text",
                "name": "fullName",
                "title": "Full Name",
                "isRequired": true
                },
                {
                "type": "text",
                "name": "dateOfBirth",
                "title": "Date of Birth",
                "isRequired": true,
                "inputType": "date"
                },
                {
                "type": "boolean",
                "name": "residencyStatus",
                "title": "Are you a resident of this country?",
                "isRequired": true,
                "swapOrder": true
                },
                {
                "type": "dropdown",
                "name": "citizenship",
                "title": "Country of Citizenship",
                "isRequired": true,
                "choicesByUrl": {
                    "url": "https://surveyjs.io/api/CountriesExample",
                    "valueName": "name"
                }
                },
                {
                "type": "text",
                "name": "nationalId",
                "title": "National ID or Passport Number",
                "isRequired": true
                },
                {
                "type": "file",
                "name": "idUpload",
                "title": "Upload ID or Passport (PDF or image)",
                "isRequired": true,
                "waitForUpload": true,
                "maxSize": 4096000
                }
            ]
            },
            {
            "name": "contact-information",
            "title": "Contact Information",
            "elements": [
                {
                "type": "text",
                "name": "email",
                "title": "Email Address",
                "isRequired": true,
                "inputType": "email"
                },
                {
                "type": "phone",
                "name": "phoneNumber",
                "title": "Mobile Phone Number",
                "isRequired": true
                },
                {
                "type": "text",
                "name": "addressLine1",
                "title": "Street Address",
                "isRequired": true
                },
                {
                "type": "text",
                "name": "city",
                "title": "City",
                "isRequired": true
                },
                {
                "type": "text",
                "name": "postalCode",
                "title": "Postal Code",
                "isRequired": true
                },
                {
                "type": "dropdown",
                "name": "country",
                "title": "Country",
                "isRequired": true,
                "choicesByUrl": {
                    "url": "https://surveyjs.io/api/CountriesExample",
                    "valueName": "name"
                }
                }
            ]
            },
            {
            "name": "account-preferences",
            "title": "Account Preferences",
            "elements": [
                {
                "type": "dropdown",
                "name": "accountType",
                "title": "Account Type",
                "isRequired": true,
                "choices": [
                    "Checking",
                    "Savings",
                    "Business",
                    "Joint"
                ]
                },
                {
                "type": "checkbox",
                "name": "services",
                "title": "Additional Services",
                "choices": [
                    "Debit Card",
                    "Online Banking",
                    "SMS Alerts",
                    "Overdraft Protection"
                ]
                },
                {
                "type": "boolean",
                "name": "jointAccount",
                "title": "Is this a joint account?",
                "isRequired": true,
                "swapOrder": true
                },
                {
                "type": "panel",
                "name": "jointHolderInfo",
                "visibleIf": "{jointAccount} = true",
                "title": "Joint Account Holder Information",
                "elements": [
                    {
                    "type": "text",
                    "name": "jointHolderName",
                    "title": "Full Name",
                    "isRequired": true
                    },
                    {
                    "type": "text",
                    "name": "jointHolderId",
                    "title": "National ID or Passport Number",
                    "isRequired": true
                    }
                ]
                }
            ]
            },
            {
            "name": "declarations",
            "title": "Declarations",
            "elements": [
                {
                "type": "boolean",
                "name": "isPEP",
                "title": "Are you or a close associate a Politically Exposed Person (PEP)?",
                "isRequired": true
                },
                {
                "type": "boolean",
                "name": "isTaxResidentUS",
                "title": "Are you a tax resident of the United States (FATCA)?",
                "isRequired": true
                },
                {
                "type": "comment",
                "name": "otherInfo",
                "title": "Other information or comments"
                },
                {
                "type": "signaturepad",
                "name": "signature",
                "title": "Digital Signature",
                "isRequired": true,
                "waitForUpload": true
                },
                {
                "type": "text",
                "name": "signatureDate",
                "title": "Date",
                "defaultValueExpression": "today()",
                "isRequired": true,
                "inputType": "date"
                },
                {
                "type": "checkbox",
                "name": "termsAgreement",
                "title": "I agree to the Terms and Conditions",
                "isRequired": true,
                "choices": [
                    "Yes"
                ]
                }
            ]
            },
            {
            "name": "confirmation",
            "title": "Confirmation",
            "elements": [
                {
                "type": "html",
                "name": "confirmationText",
                "html": "<p>Thank you. Your application has been submitted for review. We will contact you shortly.</p>"
                }
            ]
            }
        ],
        "showProgressBar": true
        }
  },
