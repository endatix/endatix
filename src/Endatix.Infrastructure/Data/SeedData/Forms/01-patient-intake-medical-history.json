{
  "form": {
    "name": "Patient Intake & Medical History"
  },
  "definition": {
    "jsonSchema": {
      "title": "Patient Intake &amp; Medical History",
      "pages": [
        {
          "name": "basic-information",
          "title": "Basic Information",
          "elements": [
            {
              "type": "text",
              "name": "fullName",
              "title": "Full Name",
              "isRequired": true
            },
            {
              "type": "text",
              "name": "dob",
              "title": "Date of Birth",
              "isRequired": true,
              "inputType": "date"
            },
            {
              "type": "radiogroup",
              "name": "sex",
              "title": "Sex",
              "isRequired": true,
              "choices": [
                "Male",
                "Female"
              ]
            },
            {
              "type": "text",
              "name": "email",
              "title": "Email Address",
              "isRequired": true,
              "inputType": "email"
            },
            {
              "type": "phone",
              "name": "phone",
              "isRequired": true
            },
            {
              "type": "text",
              "name": "address",
              "title": "Home Address"
            }
          ]
        },
        {
          "name": "insurance-information",
          "title": "Insurance Information",
          "elements": [
            {
              "type": "radiogroup",
              "name": "hasInsurance",
              "title": "Do you have health insurance?",
              "isRequired": true,
              "choices": [
                "Yes",
                "No"
              ]
            },
            {
              "type": "panel",
              "name": "insuranceDetails",
              "visibleIf": "{hasInsurance} = 'Yes'",
              "title": "Insurance Details",
              "elements": [
                {
                  "type": "text",
                  "name": "insuranceProvider",
                  "title": "Insurance Provider"
                },
                {
                  "type": "text",
                  "name": "insuranceId",
                  "title": "Insurance ID"
                },
                {
                  "type": "file",
                  "name": "insuranceCard",
                  "title": "Upload a photo of your insurance card",
                  "maxSize": 5242880
                }
              ]
            }
          ]
        },
        {
          "name": "current-concerns",
          "title": "Current Concerns",
          "elements": [
            {
              "type": "comment",
              "name": "mainComplaint",
              "title": "What is the main reason for your visit today?",
              "isRequired": true
            },
            {
              "type": "signaturepad",
              "name": "problemAreas",
              "title": "Indicate any areas on the body where you are experiencing pain or discomfort",
              "description": "Use your finger or mouse to mark specific body parts where you're feeling symptoms. You can mark multiple areas.",
              "signatureWidth": 600,
              "signatureHeight": 600,
              "showPlaceholder": false,
              "backgroundImage": "https://endatixstorageci.blob.core.windows.net/content/f/1384452362923409408/c24665a2-31c0-44a2-a687-39188c6d8e99.jpg",
              "penColor": "#ff0000",
              "waitForUpload": true
            },
            {
              "type": "rating",
              "name": "painLevel",
              "title": "On a scale of 1 to 10, how severe is your pain or discomfort?",
              "rateCount": 10,
              "rateMax": 10,
              "minRateDescription": "No pain",
              "maxRateDescription": "Worst pain imaginable"
            }
          ]
        },
        {
          "name": "medical-history",
          "title": "Medical History",
          "elements": [
            {
              "type": "checkbox",
              "name": "medicalConditions",
              "title": "Have you ever had any of the following conditions?",
              "isRequired": true,
              "choices": [
                "Diabetes",
                "Hypertension",
                "Heart Disease",
                "Asthma",
                "Cancer",
                "Kidney Disease",
                "Liver Disease",
                "None of the above"
              ]
            },
            {
              "type": "comment",
              "name": "otherConditions",
              "title": "Please list any other medical conditions not mentioned above:"
            },
            {
              "type": "matrixdropdown",
              "name": "familyHistory",
              "title": "Family Medical History",
              "columns": [
                {
                  "name": "father",
                  "title": "Father"
                },
                {
                  "name": "mother",
                  "title": "Mother"
                },
                {
                  "name": "sibling",
                  "title": "Sibling(s)"
                }
              ],
              "choices": [
                1,
                2,
                3,
                4,
                5
              ],
              "cellType": "boolean",
              "rows": [
                "Diabetes",
                "Hypertension",
                "Heart Disease",
                "Cancer"
              ]
            },
            {
              "type": "radiogroup",
              "name": "smoking",
              "title": "Do you currently smoke or use tobacco?",
              "choices": [
                "Yes",
                "No",
                "Former smoker"
              ]
            },
            {
              "type": "radiogroup",
              "name": "alcohol",
              "title": "Do you consume alcohol?",
              "choices": [
                "Yes",
                "No"
              ]
            }
          ]
        },
        {
          "name": "allergies-medications",
          "title": "Allergies & Medications",
          "elements": [
            {
              "type": "checkbox",
              "name": "allergies",
              "title": "Do you have any allergies?",
              "choices": [
                "Penicillin",
                "Latex",
                "Peanuts",
                "Shellfish",
                "Pollen"
              ],
              "showOtherItem": true
            },
            {
              "type": "comment",
              "name": "allergyDetails",
              "visibleIf": "{allergies} notempty",
              "title": "Please describe your allergic reactions:"
            },
            {
              "type": "paneldynamic",
              "name": "medications",
              "title": "Current Medications",
              "templateElements": [
                {
                  "type": "text",
                  "name": "name",
                  "title": "Medication Name"
                },
                {
                  "type": "text",
                  "name": "dosage",
                  "title": "Dosage & Frequency"
                }
              ],
              "templateTitle": "Medication #{panelIndex}",
              "addPanelText": "Add Medication"
            }
          ]
        },
        {
          "name": "consent-signature",
          "title": "Consent & Signature",
          "elements": [
            {
              "type": "html",
              "name": "consentText",
              "html": "<p>Please read and accept the consent form to proceed.</p><p>I consent to the use and sharing of my medical data as required for medical care.</p>"
            },
            {
              "type": "radiogroup",
              "name": "consentGiven",
              "title": "Do you give consent?",
              "isRequired": true,
              "choices": [
                "Yes",
                "No"
              ]
            },
            {
              "type": "signaturepad",
              "name": "signature",
              "visibleIf": "{consentGiven} = 'Yes'",
              "title": "Signature"
            }
          ]
        }
      ]
    }
  },
