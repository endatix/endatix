{
  "form": {
    "name": "Post-Visit Follow-Up"
  },
  "definition": {
    "jsonSchema": {
        "title": "Post-Visit Feedback",
        "description": "Please share your thoughts about your recent visit so we can continue improving our care.",
        "pages": [
            {
            "name": "visit-context",
            "title": "Visit Context",
            "elements": [
                {
                "type": "text",
                "name": "visitDate",
                "title": "Date of Visit",
                "isRequired": true,
                "inputType": "date"
                },
                {
                "type": "dropdown",
                "name": "providerSeen",
                "title": "Which provider did you see?",
                "choices": [
                  "Dr. Sarah Mitchell (Family Medicine)",
                  "Dr. James Chen (Internal Medicine)",
                  "Dr. Emily Rodriguez (Pediatrics)",
                  "Dr. Michael Thompson (Cardiology)",
                  "Dr. Lisa Patel (Dermatology)",
                  "Dr. Robert Williams (Orthopedics)",
                  "No Preference"
                ]
                },
                {
                "type": "rating",
                "name": "overallSatisfaction",
                "title": "Overall, how satisfied were you with your visit?",
                "isRequired": true
                }
            ]
            },
            {
            "name": "detailed-feedback",
            "title": "Detailed Feedback",
            "elements": [
                {
                "type": "checkbox",
                "name": "feedbackTopics",
                "title": "What would you like to give feedback on?",
                "choices": [
                    "Reception & Check-In",
                    "Wait Time",
                    "Provider Interaction",
                    "Facilities",
                    "Billing & Insurance",
                    "Other"
                ]
                },
                {
                "type": "paneldynamic",
                "name": "topicFeedback",
                "visibleIf": "{feedbackTopics} notempty",
                "title": "Your Feedback",
                "templateElements": [
                    {
                    "type": "dropdown",
                    "name": "topic",
                    "title": "Topic",
                    "choicesFromQuestion": "feedbackTopics",
                    "choices": [
                        "Item 1",
                        "Item 2",
                        "Item 3"
                    ]
                    },
                    {
                    "type": "rating",
                    "name": "rating",
                    "title": "Rating"
                    },
                    {
                    "type": "comment",
                    "name": "comment",
                    "title": "Comments"
                    }
                ],
                "addPanelText": "Add Another Topic"
                }
            ]
            },
            {
            "name": "additional-feedback",
            "title": "Additional Feedback",
            "elements": [
                {
                "type": "radiogroup",
                "name": "wouldRecommend",
                "title": "Would you recommend our clinic to others?",
                "choices": [
                    "Yes",
                    "No",
                    "Not Sure"
                ]
                },
                {
                "type": "radiogroup",
                "name": "anyIssues",
                "title": "Would you like to report an issue or share a compliment?",
                "choices": [
                    "No",
                    "Issue",
                    "Compliment"
                ]
                },
                {
                "type": "comment",
                "name": "issueDetails",
                "visibleIf": "{anyIssues} = 'Issue'",
                "title": "Please describe the issue you experienced:"
                },
                {
                "type": "comment",
                "name": "complimentDetails",
                "visibleIf": "{anyIssues} = 'Compliment'",
                "title": "Who or what would you like to compliment?"
                },
                {
                "type": "radiogroup",
                "name": "requestFollowup",
                "visibleIf": "{anyIssues} = 'Issue'",
                "title": "Would you like someone from our team to contact you about your feedback?",
                "choices": [
                    "Yes",
                    "No"
                ]
                },
                {
                "type": "phone",
                "name": "contactPhone",
                "visibleIf": "{requestFollowup} = 'Yes'",
                "title": "Phone number to reach you"
                }
            ]
            },
            {
            "name": "final-comments",
            "title": "Final Comments",
            "elements": [
                {
                "type": "comment",
                "name": "finalThoughts",
                "title": "Any final comments, questions, or suggestions?"
                },
                {
                "type": "html",
                "name": "thankYouNote",
                "html": "<p>Thank you for your time and feedback. We appreciate your help in improving our care!</p>"
                }
            ]
            }
        ],
        "showProgressBar": true
        }
  },
  "submissions": [
