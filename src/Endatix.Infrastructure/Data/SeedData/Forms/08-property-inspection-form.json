{
  "form": {
    "name": "Property Inspection Form"
  },
  "definition": {
    "jsonSchema": {
        "title": "Property Inspection Report",
        "description": "Use this form to document the condition of a property during routine or move-in/out inspections.",
        "pages": [
            {
            "name": "property-info",
            "title": "Property Info",
            "elements": [
                {
                "type": "text",
                "name": "propertyAddress",
                "title": "Property Address",
                "isRequired": true
                },
                {
                "type": "text",
                "name": "unitNumber",
                "title": "Unit Number"
                },
                {
                "type": "dropdown",
                "name": "inspectionType",
                "title": "Inspection Type",
                "isRequired": true,
                "choices": [
                    "Move-In",
                    "Move-Out",
                    "Routine",
                    "Maintenance Check"
                ],
                "showOtherItem": true
                },
                {
                "type": "text",
                "name": "inspectionDate",
                "title": "Inspection Date",
                "defaultValueExpression": "today()",
                "isRequired": true,
                "inputType": "date"
                }
            ]
            },
            {
            "name": "room-inspection",
            "title": "Room Inspection",
            "elements": [
                {
                "type": "paneldynamic",
                "name": "rooms",
                "title": "Room Inspection",
                "templateElements": [
                    {
                    "type": "text",
                    "name": "roomName",
                    "title": "Room Name (e.g., Living Room, Bedroom 1)",
                    "isRequired": true
                    },
                    {
                    "type": "rating",
                    "name": "condition",
                    "title": "General Condition",
                    "minRateDescription": "Poor",
                    "maxRateDescription": "Excellent"
                    },
                    {
                    "type": "boolean",
                    "name": "hasIssues",
                    "title": "Any visible issues?",
                    "swapOrder": true
                    },
                    {
                    "type": "comment",
                    "name": "issueDescription",
                    "visibleIf": "{panel.hasIssues} = true",
                    "title": "Describe the issue(s)"
                    },
                    {
                    "type": "file",
                    "name": "roomPhotos",
                    "visibleIf": "{panel.hasIssues} = true",
                    "title": "Upload photos",
                    "allowMultiple": true,
                    "waitForUpload": true,
                    "maxSize": 4096000
                    }
                ],
                "templateTitle": "Room #{panelIndex}",
                "panelCount": 1,
                "minPanelCount": 1,
                "addPanelText": "Add Room",
                "removePanelText": "Remove Room"
                }
            ]
            },
            {
            "name": "overall-assessment",
            "title": "Overall Assessment",
            "elements": [
                {
                "type": "rating",
                "name": "overallCondition",
                "title": "Overall Property Condition",
                "minRateDescription": "Poor",
                "maxRateDescription": "Excellent"
                },
                {
                "type": "comment",
                "name": "recommendations",
                "title": "Recommendations or required repairs"
                }
            ]
            },
            {
            "name": "inspector-confirmation",
            "title": "Inspector Confirmation",
            "elements": [
                {
                "type": "text",
                "name": "inspectorName",
                "title": "Inspector Name",
                "isRequired": true
                },
                {
                "type": "signaturepad",
                "name": "signature",
                "title": "Signature",
                "isRequired": true,
                "waitForUpload": true
                },
                {
                "type": "text",
                "name": "signDate",
                "title": "Date Signed",
                "defaultValueExpression": "today()",
                "isRequired": true,
                "inputType": "date"
                }
            ]
            }
        ],
        "showProgressBar": true
        }
  },
