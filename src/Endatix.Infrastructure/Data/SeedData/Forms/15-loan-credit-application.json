{
  "form": {
    "name": "Loan/Credit Application"
  },
  "definition": {
    "jsonSchema": {
        "title": "Loan/Credit Application Form",
        "description": "Please fill out the form to apply for a loan or credit.",
        "pages": [
            {
            "name": "applicant-information",
            "title": "Applicant Information",
            "elements": [
                {
                "type": "text",
                "name": "fullName",
                "title": "Full Name",
                "isRequired": true
                },
                {
                "type": "text",
                "name": "dob",
                "title": "Date of Birth",
                "isRequired": true,
                "inputType": "date"
                },
                {
                "type": "radiogroup",
                "name": "maritalStatus",
                "title": "Marital Status",
                "choices": [
                    "Single",
                    "Married",
                    "Divorced",
                    "Widowed"
                ]
                },
                {
                "type": "dropdown",
                "name": "residency",
                "title": "Country of Residency",
                "isRequired": true,
                "choicesByUrl": {
                    "url": "https://surveyjs.io/api/CountriesExample",
                    "valueName": "name"
                }
                },
                {
                "type": "text",
                "name": "idNumber",
                "title": "National ID or Passport",
                "isRequired": true
                },
                {
                "type": "file",
                "name": "idUpload",
                "title": "Upload ID Document",
                "isRequired": true,
                "waitForUpload": true,
                "maxSize": 4096000
                }
            ]
            },
            {
            "name": "contact-details",
            "title": "Contact Details",
            "elements": [
                {
                "type": "text",
                "name": "email",
                "title": "Email",
                "isRequired": true,
                "inputType": "email"
                },
                {
                "type": "phone",
                "name": "phone",
                "title": "Phone Number",
                "isRequired": true
                },
                {
                "type": "text",
                "name": "address",
                "title": "Residential Address",
                "isRequired": true
                },
                {
                "type": "text",
                "name": "city",
                "title": "City",
                "isRequired": true
                },
                {
                "type": "text",
                "name": "postalCode",
                "title": "Postal Code"
                }
            ]
            },
            {
            "name": "loan-details",
            "title": "Loan Details",
            "elements": [
                {
                "type": "dropdown",
                "name": "loanType",
                "title": "Type of Loan",
                "isRequired": true,
                "choices": [
                    "Personal",
                    "Auto",
                    "Home",
                    "Business"
                ]
                },
                {
                "type": "text",
                "name": "loanAmount",
                "title": "Requested Loan Amount (in USD)",
                "isRequired": true,
                "inputType": "number"
                },
                {
                "type": "text",
                "name": "loanDuration",
                "title": "Loan Term (in months)",
                "isRequired": true,
                "inputType": "number"
                },
                {
                "type": "comment",
                "name": "loanPurpose",
                "title": "Purpose of Loan",
                "isRequired": true
                },
                {
                "type": "file",
                "name": "supportingDocs",
                "title": "Upload Supporting Documents (optional)",
                "waitForUpload": true,
                "maxSize": 8192000
                }
            ]
            },
            {
            "name": "employment-income",
            "title": "Employment & Income",
            "elements": [
                {
                "type": "dropdown",
                "name": "employmentStatus",
                "title": "Employment Status",
                "isRequired": true,
                "choices": [
                    "Employed",
                    "Self-employed",
                    "Unemployed",
                    "Student",
                    "Retired"
                ]
                },
                {
                "type": "text",
                "name": "employerName",
                "visibleIf": "{employmentStatus} = 'Employed' or {employmentStatus} = 'Self-employed'",
                "title": "Employer Name"
                },
                {
                "type": "text",
                "name": "position",
                "visibleIf": "{employmentStatus} = 'Employed' or {employmentStatus} = 'Self-employed'",
                "title": "Job Title/Position"
                },
                {
                "type": "text",
                "name": "monthlyIncome",
                "title": "Monthly Income (USD)",
                "isRequired": true,
                "inputType": "number"
                },
                {
                "type": "file",
                "name": "incomeProof",
                "title": "Upload Income Proof (e.g., payslip)",
                "isRequired": true,
                "waitForUpload": true,
                "maxSize": 4096000
                }
            ]
            },
            {
            "name": "additional-details",
            "title": "Additional Details",
            "elements": [
                {
                "type": "boolean",
                "name": "hasCoApplicant",
                "title": "Do you have a co-applicant?",
                "isRequired": true,
                "swapOrder": true
                },
                {
                "type": "panel",
                "name": "coApplicantInfo",
                "visibleIf": "{hasCoApplicant} = true",
                "title": "Co-applicant Details",
                "elements": [
                    {
                    "type": "text",
                    "name": "coFullName",
                    "title": "Full Name",
                    "isRequired": true
                    },
                    {
                    "type": "text",
                    "name": "coIncome",
                    "title": "Monthly Income (USD)",
                    "isRequired": true,
                    "inputType": "number"
                    }
                ]
                },
                {
                "type": "boolean",
                "name": "existingLoans",
                "title": "Do you currently have any other loans?"
                },
                {
                "type": "comment",
                "name": "loanDetails",
                "visibleIf": "{existingLoans} = true",
                "title": "If yes, please provide details"
                }
            ]
            },
            {
            "name": "consent-signature",
            "title": "Consent & Signature",
            "elements": [
                {
                "type": "checkbox",
                "name": "declarations",
                "title": "Declarations",
                "isRequired": true,
                "choices": [
                    "I confirm that all information provided is true and correct.",
                    "I authorize the institution to verify my credit history and other details."
                ]
                },
                {
                "type": "signaturepad",
                "name": "signature",
                "title": "Digital Signature",
                "isRequired": true,
                "waitForUpload": true
                },
                {
                "type": "text",
                "name": "signatureDate",
                "title": "Date",
                "defaultValueExpression": "today()",
                "isRequired": true,
                "inputType": "date"
                }
            ]
            },
            {
            "name": "confirmation",
            "title": "Confirmation",
            "elements": [
                {
                "type": "html",
                "name": "confirmationText",
                "html": "<p>Thank you. Your loan application has been received. We will contact you shortly.</p>"
                }
            ]
            }
        ],
        "showProgressBar": true
        }
  },
