{
  "form": {
    "name": "Treatment Consent & Documentation"
  },
  "definition": {
    "jsonSchema": {
        "title": "Treatment Consent Form",
        "description": "Please read and complete this form before your treatment or procedure.",
        "pages": [
            {
            "name": "patient-information",
            "title": "Patient Information",
            "elements": [
                {
                "type": "text",
                "name": "patientFullName",
                "title": "Patient Full Name",
                "isRequired": true
                },
                {
                "type": "text",
                "name": "dob",
                "title": "Date of Birth",
                "isRequired": true,
                "inputType": "date"
                },
                {
                "type": "text",
                "name": "treatmentName",
                "title": "Treatment / Procedure Name",
                "isRequired": true
                },
                {
                "type": "comment",
                "name": "treatmentDescription",
                "title": "Briefly describe the treatment or procedure (optional)"
                },
                {
                "type": "radiogroup",
                "name": "isPatientSigning",
                "title": "Is the patient signing this form personally?",
                "isRequired": true,
                "choices": [
                    "Yes",
                    "No"
                ]
                }
            ]
            },
            {
            "name": "consent-statement",
            "title": "Consent Statement",
            "elements": [
                {
                "type": "html",
                "name": "consentText",
                "html": "<h4>Consent to Treatment</h4><p>I hereby authorize the healthcare provider to perform the indicated treatment or procedure. I acknowledge that I have been informed about the nature, risks, benefits, and possible alternatives, and all my questions have been answered to my satisfaction.</p><p>I understand that I may withdraw consent at any time before the treatment begins.</p>"
                },
                {
                "type": "radiogroup",
                "name": "consentConfirmation",
                "title": "Do you consent to the treatment or procedure described above?",
                "isRequired": true,
                "choices": [
                    "Yes",
                    "No"
                ]
                },
                {
                "type": "comment",
                "name": "additionalNotes",
                "title": "Any questions, concerns, or notes before treatment?"
                }
            ]
            },
            {
            "name": "representative-details",
            "visibleIf": "{isPatientSigning} = 'No'",
            "title": "Representative Details",
            "elements": [
                {
                "type": "text",
                "name": "representativeName",
                "title": "Representative Full Name",
                "isRequired": true
                },
                {
                "type": "text",
                "name": "relationship",
                "title": "Relationship to Patient",
                "isRequired": true
                },
                {
                "type": "phone",
                "name": "contactPhone",
                "title": "Contact Phone"
                },
                {
                "type": "file",
                "name": "authorizationDocument",
                "title": "Upload authorization or ID document (optional)",
                "waitForUpload": true,
                "maxSize": 2048000
                }
            ]
            },
            {
            "name": "signature-final-confirmation",
            "title": "Signature & Final Confirmation",
            "elements": [
                {
                "type": "html",
                "name": "signatureInstructions",
                "html": "<p>Please sign below to confirm your consent.</p>"
                },
                {
                "type": "signaturepad",
                "name": "signature",
                "width": "100%",
                "title": "Signature",
                "isRequired": true
                },
                {
                "type": "text",
                "name": "signatureDate",
                "title": "Date of Signature",
                "defaultValueExpression": "today()",
                "isRequired": true,
                "inputType": "date"
                }
            ]
            }
        ],
        "showProgressBar": true
        }
  },
